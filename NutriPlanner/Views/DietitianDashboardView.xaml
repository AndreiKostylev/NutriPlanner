<UserControl x:Class="NutriPlanner.Views.DietitianDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Панель диетолога" 
                       FontSize="20" FontWeight="Bold"/>
            <Button Content="Обновить" 
                    Command="{Binding RefreshCommand}"
                    Margin="20,0,0,0"
                    Padding="10,5"/>
        </StackPanel>
       
        <!-- Статистика -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Общая статистика" 
                           FontWeight="Bold" Margin="0,0,0,10"/>

                <WrapPanel>
                    <!-- Карточки статистики -->
                    <Border BorderBrush="#4CAF50" BorderThickness="2" 
                            CornerRadius="5" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Всего клиентов" 
                                       Foreground="#666" FontSize="12"/>
                            <TextBlock Text="{Binding Stats.TotalClients}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#2196F3" BorderThickness="2" 
                            CornerRadius="5" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Активных клиентов" 
                                       Foreground="#666" FontSize="12"/>
                            <TextBlock Text="{Binding Stats.ActiveClients}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#FF9800" BorderThickness="2" 
                            CornerRadius="5" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Требуют внимания" 
                                       Foreground="#666" FontSize="12"/>
                            <TextBlock Text="{Binding Stats.ClientsNeedingAttention}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>

                    <Button Content="+ Новый план" 
                            Command="{Binding CreatePlanCommand}"
                            Background="#4CAF50" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Margin="20,0,0,0"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Предупреждения -->
        <GroupBox Grid.Row="2" Header="Требуют внимания" Padding="5">
            <DataGrid AutoGenerateColumns="False"
                      ItemsSource="{Binding Alerts}"
                      SelectedItem="{Binding SelectedAlert}"
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Клиент" 
                                        Binding="{Binding ClientName}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="Тип предупреждения" 
                                        Binding="{Binding AlertType}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Сообщение" 
                                        Binding="{Binding Message}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Дата" 
                                        Binding="{Binding AlertDate, StringFormat=dd.MM.yy HH:mm}" 
                                        Width="100"/>
                    <DataGridTemplateColumn Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Просмотр" 
                                        Command="{Binding DataContext.ViewClientCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>