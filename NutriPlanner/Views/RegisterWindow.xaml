<Window x:Class="NutriPlanner.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="550" Width="400"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="Регистрация" FontSize="20" Margin="0 0 0 20"/>

            <TextBlock Text="Логин"/>
            <TextBox Text="{Binding Username}" Margin="0 0 0 10"/>

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Email}" Margin="0 0 0 10"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0 0 0 10"/>

            <TextBlock Text="Возраст"/>
            <TextBox Text="{Binding Age}" Margin="0 0 0 10"/>

            <TextBlock Text="Пол"/>
            <ComboBox ItemsSource="{Binding Genders}" SelectedItem="{Binding Gender}" Margin="0 0 0 10"/>

            <TextBlock Text="Рост (см)"/>
            <TextBox Text="{Binding Height}" Margin="0 0 0 10"/>

            <TextBlock Text="Вес (кг)"/>
            <TextBox Text="{Binding Weight}" Margin="0 0 0 10"/>

            <TextBlock Text="Уровень активности"/>
            <ComboBox ItemsSource="{Binding ActivityLevels}" SelectedItem="{Binding ActivityLevel}" Margin="0 0 0 10"/>

            <TextBlock Text="Цель"/>
            <ComboBox ItemsSource="{Binding Goals}" SelectedItem="{Binding Goal}" Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="Зарегистрироваться" Command="{Binding RegisterCommand}" Width="150" Margin="5"/>
                <Button Content="Назад" Command="{Binding BackToLoginCommand}" Width="100" Margin="5"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
