<Window x:Class="NutriPlanner.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Background="White">

            <TextBlock Text="Регистрация нового пользователя" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- Логин -->
            <TextBlock Text="Логин *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Height="25" Margin="0 0 0 10"/>

            <!-- Email -->
            <TextBlock Text="Email *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Height="25" Margin="0 0 0 10"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <PasswordBox x:Name="PasswordBox" 
                         PasswordChanged="PasswordBox_PasswordChanged" 
                         Height="25" Margin="0 0 0 10"/>

            <!-- Возраст -->
            <TextBlock Text="Возраст *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" 
                     Height="25" Margin="0 0 0 10"/>

            <!-- Пол -->
            <TextBlock Text="Пол *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <ComboBox ItemsSource="{Binding Genders}" 
                      SelectedItem="{Binding Gender}" 
                      Height="25" Margin="0 0 0 10"/>

            <!-- Рост -->
            <TextBlock Text="Рост (см) *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" 
                     Height="25" Margin="0 0 0 10"/>

            <!-- Вес -->
            <TextBlock Text="Вес (кг) *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" 
                     Height="25" Margin="0 0 0 10"/>

            <!-- Активность -->
            <TextBlock Text="Уровень активности *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <ComboBox ItemsSource="{Binding ActivityLevels}" 
                      SelectedItem="{Binding ActivityLevel}" 
                      Height="25" Margin="0 0 0 10"/>

            <!-- Цель -->
            <TextBlock Text="Цель *" FontWeight="SemiBold" Margin="0 5 0 2"/>
            <ComboBox ItemsSource="{Binding Goals}" 
                      SelectedItem="{Binding Goal}" 
                      Height="25" Margin="0 0 0 20"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="Зарегистрироваться" 
                        Command="{Binding RegisterCommand}" 
                        Width="150" Height="35"
                        Margin="0 0 10 0"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"/>

                <Button Content="Назад" 
                        Command="{Binding BackToLoginCommand}" 
                        Width="100" Height="35"
                        Background="#F44336"
                        Foreground="White"/>
            </StackPanel>

            <TextBlock Text="* - обязательные поля" 
                       Foreground="Gray" FontSize="10"
                       Margin="0 10 0 0"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </ScrollViewer>
</Window>