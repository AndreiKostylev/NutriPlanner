<UserControl x:Class="NutriPlanner.Views.UserPlanViewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Мои планы питания" 
                       FontSize="20" 
                       FontWeight="Bold"/>
            <Button Content="🔄 Обновить" 
                    Command="{Binding RefreshCommand}"
                    Margin="20,0,0,0"
                    Padding="10,5"
                    ToolTip="Обновить данные"/>
        </StackPanel>

        <!-- Панель управления датой и планами -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Управление датой -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="◀" 
                            Command="{Binding PreviousDayCommand}"
                            Width="30" Margin="0,0,10,0"
                            ToolTip="Предыдущий день"/>

                    <Border BorderBrush="#2196F3" BorderThickness="1" CornerRadius="3" Padding="5">
                        <TextBlock Text="{Binding SelectedDate, StringFormat='dd.MM.yyyy'}"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Width="100"
                                   TextAlignment="Center"/>
                    </Border>

                    <Button Content="▶" 
                            Command="{Binding NextDayCommand}"
                            Width="30" Margin="10,0,20,0"
                            ToolTip="Следующий день"/>

                    <Button Content="Сегодня" 
                            Command="{Binding TodayCommand}"
                            Padding="10,5"/>
                </StackPanel>

                <!-- Выбор плана -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Выберите план:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Plans}"
                              SelectedItem="{Binding SelectedPlan}"
                              DisplayMemberPath="PlanName"
                              Width="250"/>

                    <!-- Активный план -->
                    <TextBlock VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               FontStyle="Italic"
                               Foreground="#2196F3">
                        <Run Text="Активный план:"/>
                        <Run Text="{Binding ActivePlan.PlanName}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Прогресс выполнения плана -->
        <GroupBox Grid.Row="2" Header="Прогресс выполнения плана" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Статистика -->
                <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                    <!-- Калории -->
                    <Border BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Калории" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TotalCalories, StringFormat={}{0:F0}}" 
                                       FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TargetCalories, StringFormat={}из {0}}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar Value="{Binding DailyProgress.CaloriesProgress}" Maximum="100" Height="10" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding DailyProgress.CaloriesProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Белки -->
                    <Border BorderBrush="#2196F3" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Белки" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TotalProtein, StringFormat={}{0:F1} г}" 
                                       FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TargetProtein, StringFormat={}из {0} г}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar Value="{Binding DailyProgress.ProteinProgress}" Maximum="100" Height="10" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding DailyProgress.ProteinProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <!-- Жиры -->
                    <Border BorderBrush="#FF9800" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Жиры" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TotalFat, StringFormat={}{0:F1} г}" 
                                       FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TargetFat, StringFormat={}из {0} г}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar Value="{Binding DailyProgress.FatProgress}" Maximum="100" Height="10" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding DailyProgress.FatProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>

                    <!-- Углеводы -->
                    <Border BorderBrush="#9C27B0" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="Углеводы" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TotalCarbs, StringFormat={}{0:F1} г}" 
                                       FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyProgress.TargetCarbs, StringFormat={}из {0} г}" 
                                       HorizontalAlignment="Center"/>
                            <ProgressBar Value="{Binding DailyProgress.CarbsProgress}" Maximum="100" Height="10" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding DailyProgress.CarbsProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" Foreground="#9C27B0"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Рекомендации продуктов -->
                <TabControl Grid.Row="1">
                    <TabItem Header="Рекомендуемые продукты">
                        <DataGrid ItemsSource="{Binding RecommendedProducts}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
                                <DataGridTextColumn Header="Калории" Binding="{Binding Calories, StringFormat={}{0:F0}}" Width="70"/>
                                <DataGridTextColumn Header="Белки" Binding="{Binding Protein, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Жиры" Binding="{Binding Fat, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Углеводы" Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Завтрак">
                        <DataGrid ItemsSource="{Binding BreakfastRecommendations}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Калории" Binding="{Binding Calories, StringFormat={}{0:F0}}" Width="70"/>
                                <DataGridTextColumn Header="Белки" Binding="{Binding Protein, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Жиры" Binding="{Binding Fat, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Углеводы" Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Обед">
                        <DataGrid ItemsSource="{Binding LunchRecommendations}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Калории" Binding="{Binding Calories, StringFormat={}{0:F0}}" Width="70"/>
                                <DataGridTextColumn Header="Белки" Binding="{Binding Protein, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Жиры" Binding="{Binding Fat, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Углеводы" Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Ужин">
                        <DataGrid ItemsSource="{Binding DinnerRecommendations}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Калории" Binding="{Binding Calories, StringFormat={}{0:F0}}" Width="70"/>
                                <DataGridTextColumn Header="Белки" Binding="{Binding Protein, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Жиры" Binding="{Binding Fat, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Углеводы" Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Сегодняшние приемы пищи">
                        <DataGrid ItemsSource="{Binding TodayMeals}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Время" Binding="{Binding Date, StringFormat=HH:mm}" Width="70"/>
                                <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity, StringFormat={}{0} г}" Width="80"/>
                                <DataGridTextColumn Header="Калории" Binding="{Binding Calories, StringFormat={}{0:F0}}" Width="70"/>
                                <DataGridTextColumn Header="Белки" Binding="{Binding Protein, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Жиры" Binding="{Binding Fat, StringFormat={}{0:F1} г}" Width="70"/>
                                <DataGridTextColumn Header="Углеводы" Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Grid>
        </GroupBox>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Детали плана" 
                    Command="{Binding ViewPlanDetailsCommand}"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    MinWidth="120"/>

            <Button Content="Добавить продукт" 
                    Command="{Binding AddProductToMealCommand}"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    MinWidth="120"/>

            <Button Content="Экспорт плана" 
                    Command="{Binding ExportPlanCommand}"
                    Padding="15,8"
                    Background="#FF9800"
                    Foreground="White"
                    MinWidth="120"/>
        </StackPanel>
    </Grid>
</UserControl>