<UserControl x:Class="NutriPlanner.Views.NutritionPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#F5F5F5" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Создание плана питания" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Диетолог может создать индивидуальный план питания для клиента"
                               Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Панель быстрого доступа - всегда видимая -->
            <Border Grid.Row="1" 
                    Background="#E3F2FD" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Клиент -->
                    <TextBlock Grid.Column="0" 
                               Text="Клиент:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding Clients}" 
                              SelectedItem="{Binding SelectedClient}"
                              Height="30"
                              MinWidth="180"
                              Margin="0,0,10,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Username}" FontWeight="Bold"/>
                                    <Run Text=" (" Foreground="Gray"/>
                                    <Run Text="{Binding Goal}" Foreground="Gray"/>
                                    <Run Text=")" Foreground="Gray"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Прием пищи -->
                    <TextBlock Grid.Column="2" 
                               Text="Прием:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <ComboBox Grid.Column="3" 
                              ItemsSource="{Binding MealTypes}"
                              SelectedItem="{Binding SelectedMealType}"
                              Height="30"
                              MinWidth="100"
                              Margin="0,0,10,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Продукт -->
                    <TextBlock Grid.Column="4" 
                               Text="Продукт:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <ComboBox Grid.Column="5" 
                              ItemsSource="{Binding AllProducts}" 
                              SelectedItem="{Binding SelectedProduct}"
                              Height="30"
                              MinWidth="180"
                              Margin="0,0,10,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding ProductName}"/>
                                    <Run Text=" (" Foreground="Gray"/>
                                    <Run Text="{Binding Calories, StringFormat={}{0} ккал}" Foreground="Gray"/>
                                    <Run Text=")" Foreground="Gray"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Кнопка добавления -->
                    <Button Grid.Column="6" 
                            Content="Добавить" 
                            Command="{Binding AddProductToMealCommand}" 
                            Padding="10,5" 
                            Background="#4CAF50" 
                            Foreground="White"
                            FontWeight="Bold"
                            Height="30"
                            MinWidth="80"/>
                </Grid>
            </Border>

            <!-- Основные настройки плана -->
            <Border Grid.Row="2" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Название плана -->
                    <TextBlock Grid.Column="0" Grid.Row="0"
                               Text="Название:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <TextBox Grid.Column="1" Grid.Row="0"
                             Text="{Binding PlanName}" 
                             Height="30"
                             Margin="0,0,10,0"/>

                    <!-- Статус -->
                    <TextBlock Grid.Column="2" Grid.Row="0"
                               Text="Статус:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <ComboBox Grid.Column="3" Grid.Row="0"
                              ItemsSource="{Binding StatusTypes}"
                              SelectedItem="{Binding Status}"
                              Height="30"
                              Margin="0,0,10,0"
                              MinWidth="100">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Кнопка загрузки клиентов -->
                    <Button Grid.Column="4" Grid.Row="0"
                            Content="Загрузить клиентов" 
                            Command="{Binding LoadClientsCommand}"
                            Padding="8,5"
                            Height="30"/>

                    <!-- Даты -->
                    <TextBlock Grid.Column="0" Grid.Row="1"
                               Text="Период:" 
                               VerticalAlignment="Center"
                               Margin="0,10,5,0"/>

                    <StackPanel Grid.Column="1" Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <DatePicker SelectedDate="{Binding StartDate}" 
                                    Height="30"
                                    Width="120"
                                    Margin="0,0,10,0"/>

                        <TextBlock Text="по" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <DatePicker SelectedDate="{Binding EndDate}" 
                                    Height="30"
                                    Width="120"/>
                    </StackPanel>

                    <!-- Кнопка расчета целей -->
                    <Button Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2"
                            Content="Рассчитать цели" 
                            Command="{Binding CalculateTargetsCommand}"
                            Padding="8,5"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="30"
                            Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Целевые показатели -->
            <Border Grid.Row="3" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <!-- УДАЛЕНА КОЛОНКА ДЛЯ КНОПКИ АВТО-ГЕНЕРАЦИИ -->
                    </Grid.ColumnDefinitions>

                    <!-- Калории -->
                    <Border Grid.Column="0" 
                            BorderBrush="#4CAF50" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="5">
                        <StackPanel>
                            <TextBlock Text="Калории" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBox Text="{Binding TargetCalories, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="16" 
                                     HorizontalAlignment="Center"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextAlignment="Center"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="ккал/день" 
                                       HorizontalAlignment="Center"
                                       Foreground="#666"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Белки -->
                    <Border Grid.Column="1" 
                            BorderBrush="#2196F3" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="5">
                        <StackPanel>
                            <TextBlock Text="Белки" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBox Text="{Binding TargetProtein, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="16" 
                                     HorizontalAlignment="Center"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextAlignment="Center"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="г/день" 
                                       HorizontalAlignment="Center"
                                       Foreground="#666"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Жиры -->
                    <Border Grid.Column="2" 
                            BorderBrush="#FF9800" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="5">
                        <StackPanel>
                            <TextBlock Text="Жиры" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBox Text="{Binding TargetFat, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="16" 
                                     HorizontalAlignment="Center"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextAlignment="Center"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="г/день" 
                                       HorizontalAlignment="Center"
                                       Foreground="#666"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Углеводы -->
                    <Border Grid.Column="3" 
                            BorderBrush="#9C27B0" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="5">
                        <StackPanel>
                            <TextBlock Text="Углеводы" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBox Text="{Binding TargetCarbs, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="16" 
                                     HorizontalAlignment="Center"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextAlignment="Center"
                                     Margin="0,5,0,0"/>
                            <TextBlock Text="г/день" 
                                       HorizontalAlignment="Center"
                                       Foreground="#666"
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Продукты по приемам пищи -->
            <TabControl Grid.Row="4" 
                        SelectedValue="{Binding CurrentMealTab}"
                        Margin="0,0,0,10">

                <!-- Завтрак -->
                <TabItem Header="Завтрак">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Сводка по завтраку -->
                        <Border Grid.Row="0" 
                                BorderBrush="#FF9800" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Продуктов:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="{Binding BreakfastItems.Count}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="2" Text="Калории:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" Text="{Binding BreakfastSummary.TotalCalories, StringFormat={}{0:F0} ккал}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="4" Text="Белки:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="5" Text="{Binding BreakfastSummary.TotalProtein, StringFormat={}{0:F1} г}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="6" Text="Жиры:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="7" Text="{Binding BreakfastSummary.TotalFat, StringFormat={}{0:F1} г}"/>
                            </Grid>
                        </Border>

                        <!-- Список продуктов завтрака -->
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding BreakfastItems}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MinHeight="150"
                                  MaxHeight="250">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="2*"
                                                    MinWidth="150"/>
                                <DataGridTextColumn Header="Кол-во" 
                                                    Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                                    Width="Auto"
                                                    MinWidth="80"/>
                                <DataGridTextColumn Header="Ккал" 
                                                    Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Б" 
                                                    Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Ж" 
                                                    Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="У" 
                                                    Binding="{Binding Carbs, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Примечание" 
                                                    Binding="{Binding Notes}" 
                                                    Width="*"
                                                    MinWidth="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопки управления завтраком -->
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Удалить последний" 
                                    Command="{Binding RemoveProductFromMealCommand}"
                                    Padding="8,5"
                                    Margin="0,0,10,0"/>

                            <Button Content="Очистить завтрак" 
                                    Command="{Binding ClearMealCommand}"
                                    Padding="8,5"
                                    Background="#F44336"
                                    Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Обед -->
                <TabItem Header="Обед">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Сводка по обеду -->
                        <Border Grid.Row="0" 
                                BorderBrush="#4CAF50" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Продуктов:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="{Binding LunchItems.Count}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="2" Text="Калории:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" Text="{Binding LunchSummary.TotalCalories, StringFormat={}{0:F0} ккал}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="4" Text="Белки:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="5" Text="{Binding LunchSummary.TotalProtein, StringFormat={}{0:F1} г}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="6" Text="Жиры:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="7" Text="{Binding LunchSummary.TotalFat, StringFormat={}{0:F1} г}"/>
                            </Grid>
                        </Border>

                        <!-- Список продуктов обеда -->
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding LunchItems}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MinHeight="150"
                                  MaxHeight="250">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="2*"
                                                    MinWidth="150"/>
                                <DataGridTextColumn Header="Кол-во" 
                                                    Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                                    Width="Auto"
                                                    MinWidth="80"/>
                                <DataGridTextColumn Header="Ккал" 
                                                    Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Б" 
                                                    Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Ж" 
                                                    Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="У" 
                                                    Binding="{Binding Carbs, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Примечание" 
                                                    Binding="{Binding Notes}" 
                                                    Width="*"
                                                    MinWidth="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопки управления обедом -->
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Удалить последний" 
                                    Command="{Binding RemoveProductFromMealCommand}"
                                    Padding="8,5"
                                    Margin="0,0,10,0"/>

                            <Button Content="Очистить обед" 
                                    Command="{Binding ClearMealCommand}"
                                    Padding="8,5"
                                    Background="#F44336"
                                    Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Ужин -->
                <TabItem Header="Ужин">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Сводка по ужину -->
                        <Border Grid.Row="0" 
                                BorderBrush="#2196F3" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Продуктов:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="{Binding DinnerItems.Count}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="2" Text="Калории:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" Text="{Binding DinnerSummary.TotalCalories, StringFormat={}{0:F0} ккал}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="4" Text="Белки:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="5" Text="{Binding DinnerSummary.TotalProtein, StringFormat={}{0:F1} г}" Margin="5,0,10,0"/>

                                <TextBlock Grid.Column="6" Text="Жиры:" FontWeight="Bold"/>
                                <TextBlock Grid.Column="7" Text="{Binding DinnerSummary.TotalFat, StringFormat={}{0:F1} г}"/>
                            </Grid>
                        </Border>

                        <!-- Список продуктов ужина -->
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding DinnerItems}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MinHeight="150"
                                  MaxHeight="250">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="2*"
                                                    MinWidth="150"/>
                                <DataGridTextColumn Header="Кол-во" 
                                                    Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                                    Width="Auto"
                                                    MinWidth="80"/>
                                <DataGridTextColumn Header="Ккал" 
                                                    Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Б" 
                                                    Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Ж" 
                                                    Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="У" 
                                                    Binding="{Binding Carbs, StringFormat={}{0:F1} г}" 
                                                    Width="Auto"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Примечание" 
                                                    Binding="{Binding Notes}" 
                                                    Width="*"
                                                    MinWidth="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Кнопки управления ужином -->
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Удалить последний" 
                                    Command="{Binding RemoveProductFromMealCommand}"
                                    Padding="8,5"
                                    Margin="0,0,10,0"/>

                            <Button Content="Очистить ужин" 
                                    Command="{Binding ClearMealCommand}"
                                    Padding="8,5"
                                    Background="#F44336"
                                    Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Панель создания плана -->
            <Border Grid.Row="5" 
                    Background="#F9F9F9" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Описание -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Описание плана (необязательно):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Description}" 
                                 Height="50"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>
                    </StackPanel>

                    <!-- Кнопки -->
                    <Button Grid.Column="1" 
                            Content="Создать план" 
                            Command="{Binding CreatePlanCommand}"
                            Padding="15,8"
                            Margin="20,0,10,0"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            MinWidth="120"
                            Height="40"/>

                    <Button Grid.Column="2" 
                            Content="Отправить клиенту" 
                            Command="{Binding SendPlanToClientCommand}"
                            Padding="15,8"
                            Background="#2196F3"
                            Foreground="White"
                            FontWeight="Bold"
                            MinWidth="140"
                            Height="40"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>