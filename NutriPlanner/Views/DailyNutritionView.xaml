<UserControl x:Class="NutriPlanner.Views.DailyNutritionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и управление датой -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Дневник питания" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <Button Content="◀" Command="{Binding PreviousDayCommand}" Width="30" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" Width="120"/>
                <Button Content="▶" Command="{Binding NextDayCommand}" Width="30" Margin="5,0,20,0"/>
                <Button Content="Сегодня" Command="{Binding TodayCommand}" Padding="10,5"/>
            </StackPanel>
        </StackPanel>

        <!-- Статистика дня -->
        <GroupBox Grid.Row="1" Header="Статистика дня" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Калории -->
                <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Калории" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TotalCalories, StringFormat={}{0:F0}}" 
                                   FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TargetCalories, StringFormat={}из {0}}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.CaloriesProgress, StringFormat={}({0:F1}%)}" 
                                   HorizontalAlignment="Center" Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>

                <!-- Белки -->
                <Border Grid.Column="1" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Белки" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TotalProtein, StringFormat={}{0:F1} г}" 
                                   FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TargetProtein, StringFormat={}из {0} г}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.ProteinProgress, StringFormat={}({0:F1}%)}" 
                                   HorizontalAlignment="Center" Foreground="#2196F3"/>
                    </StackPanel>
                </Border>

                <!-- Жиры -->
                <Border Grid.Column="2" BorderBrush="#FF9800" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Жиры" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TotalFat, StringFormat={}{0:F1} г}" 
                                   FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TargetFat, StringFormat={}из {0} г}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.FatProgress, StringFormat={}({0:F1}%)}" 
                                   HorizontalAlignment="Center" Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <!-- Углеводы -->
                <Border Grid.Column="3" BorderBrush="#9C27B0" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Углеводы" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TotalCarbs, StringFormat={}{0:F1} г}" 
                                   FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.TargetCarbs, StringFormat={}из {0} г}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding DailyNutrition.CarbsProgress, StringFormat={}({0:F1}%)}" 
                                   HorizontalAlignment="Center" Foreground="#9C27B0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Список приемов пищи -->
        <GroupBox Grid.Row="2" Header="Приемы пищи" Margin="0,0,0,10">
            <DataGrid AutoGenerateColumns="False"
                      ItemsSource="{Binding Meals}"
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Время" 
                                        Binding="{Binding MealTime, StringFormat=HH:mm}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Продукт" 
                                        Binding="{Binding MealName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Количество" 
                                        Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Калории" 
                                        Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Белки" 
                                        Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Жиры" 
                                        Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Углеводы" 
                                        Binding="{Binding Carbs, StringFormat={}{0:F1} г}" 
                                        Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Панель добавления продуктов -->
        <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Добавить продукт:" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <ComboBox Width="200" 
                          ItemsSource="{Binding AvailableProducts}"
                          SelectedItem="{Binding SelectedProduct}" 
                          DisplayMemberPath="ProductName"
                          Margin="0,0,10,0"/>

                <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="60" Text="{Binding ProductQuantity}" Margin="0,0,5,0"/>
                <TextBlock Text="г" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <Button Content="Добавить" 
                        Command="{Binding AddProductCommand}" 
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Foreground="White"/>

                <Button Content="Очистить день" 
                        Command="{Binding ClearDayCommand}" 
                        Padding="10,5"
                        Background="#F44336"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>