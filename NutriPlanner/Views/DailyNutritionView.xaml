<UserControl x:Class="NutriPlanner.Views.DailyNutritionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок и управление датой -->
            <Border Grid.Row="0" 
                    Background="#F5F5F5" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Дневник питания" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>

                    <WrapPanel>
                        <Button Content="◀" 
                                Command="{Binding PreviousDayCommand}" 
                                Width="35" 
                                Height="35"
                                Margin="0,0,5,0"/>

                        <DatePicker SelectedDate="{Binding SelectedDate}" 
                                    Width="130"
                                    Margin="0,0,5,0"/>

                        <Button Content="▶" 
                                Command="{Binding NextDayCommand}" 
                                Width="35"
                                Height="35"
                                Margin="0,0,10,0"/>

                        <Button Content="Сегодня" 
                                Command="{Binding TodayCommand}" 
                                Padding="15,8"
                                MinWidth="80"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Статистика дня -->
            <GroupBox Grid.Row="1" 
                      Header="Статистика дня" 
                      Margin="0,0,0,10" 
                      Padding="10">
                <WrapPanel>
                    <!-- Калории -->
                    <Border BorderBrush="#4CAF50" 
                            BorderThickness="2" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="170"
                            MaxWidth="200">
                        <StackPanel>
                            <TextBlock Text="Калории" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="13"/>
                            <TextBlock Text="{Binding DailyNutrition.TotalCalories, StringFormat={}{0:F0}}" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyNutrition.TargetCalories, StringFormat={}из {0}}" 
                                       HorizontalAlignment="Center"
                                       FontSize="11"/>
                            <ProgressBar Value="{Binding DailyNutrition.CaloriesProgress}" 
                                        Maximum="100" 
                                        Height="8" 
                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding DailyNutrition.CaloriesProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#4CAF50"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Белки -->
                    <Border BorderBrush="#2196F3" 
                            BorderThickness="2" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="170"
                            MaxWidth="200">
                        <StackPanel>
                            <TextBlock Text="Белки" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="13"/>
                            <TextBlock Text="{Binding DailyNutrition.TotalProtein, StringFormat={}{0:F1} г}" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyNutrition.TargetProtein, StringFormat={}из {0} г}" 
                                       HorizontalAlignment="Center"
                                       FontSize="11"/>
                            <ProgressBar Value="{Binding DailyNutrition.ProteinProgress}" 
                                        Maximum="100" 
                                        Height="8" 
                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding DailyNutrition.ProteinProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#2196F3"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Жиры -->
                    <Border BorderBrush="#FF9800" 
                            BorderThickness="2" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="170"
                            MaxWidth="200">
                        <StackPanel>
                            <TextBlock Text="Жиры" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="13"/>
                            <TextBlock Text="{Binding DailyNutrition.TotalFat, StringFormat={}{0:F1} г}" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyNutrition.TargetFat, StringFormat={}из {0} г}" 
                                       HorizontalAlignment="Center"
                                       FontSize="11"/>
                            <ProgressBar Value="{Binding DailyNutrition.FatProgress}" 
                                        Maximum="100" 
                                        Height="8" 
                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding DailyNutrition.FatProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#FF9800"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Углеводы -->
                    <Border BorderBrush="#9C27B0" 
                            BorderThickness="2" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="170"
                            MaxWidth="200">
                        <StackPanel>
                            <TextBlock Text="Углеводы" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="13"/>
                            <TextBlock Text="{Binding DailyNutrition.TotalCarbs, StringFormat={}{0:F1} г}" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DailyNutrition.TargetCarbs, StringFormat={}из {0} г}" 
                                       HorizontalAlignment="Center"
                                       FontSize="11"/>
                            <ProgressBar Value="{Binding DailyNutrition.CarbsProgress}" 
                                        Maximum="100" 
                                        Height="8" 
                                        Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding DailyNutrition.CarbsProgress, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#9C27B0"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </GroupBox>

            <!-- Сводка по приемам пищи -->
            <GroupBox Grid.Row="2" 
                      Header="Сводка по приемам пищи" 
                      Margin="0,0,0,10" 
                      Padding="10">
                <WrapPanel>
                    <!-- Завтрак -->
                    <Border BorderBrush="#FF9800" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="150"
                            MaxWidth="180">
                        <StackPanel>
                            <TextBlock Text="Завтрак" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding BreakfastMeal.Calories, StringFormat={}{0:F0} ккал}" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,3,0,0"/>
                            <TextBlock Text="{Binding BreakfastMeal.Protein, StringFormat={}Б: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                            <TextBlock Text="{Binding BreakfastMeal.Fat, StringFormat={}Ж: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                            <TextBlock Text="{Binding BreakfastMeal.Carbs, StringFormat={}У: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Обед -->
                    <Border BorderBrush="#4CAF50" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="150"
                            MaxWidth="180">
                        <StackPanel>
                            <TextBlock Text="Обед" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding LunchMeal.Calories, StringFormat={}{0:F0} ккал}" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,3,0,0"/>
                            <TextBlock Text="{Binding LunchMeal.Protein, StringFormat={}Б: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                            <TextBlock Text="{Binding LunchMeal.Fat, StringFormat={}Ж: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                            <TextBlock Text="{Binding LunchMeal.Carbs, StringFormat={}У: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Ужин -->
                    <Border BorderBrush="#2196F3" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8" 
                            Margin="3"
                            MinWidth="150"
                            MaxWidth="180">
                        <StackPanel>
                            <TextBlock Text="Ужин" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding DinnerMeal.Calories, StringFormat={}{0:F0} ккал}" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,3,0,0"/>
                            <TextBlock Text="{Binding DinnerMeal.Protein, StringFormat={}Б: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                            <TextBlock Text="{Binding DinnerMeal.Fat, StringFormat={}Ж: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                            <TextBlock Text="{Binding DinnerMeal.Carbs, StringFormat={}У: {0:F1} г}" 
                                       HorizontalAlignment="Center" 
                                       FontSize="10"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </GroupBox>

            <!-- Вкладки с деталями приемов пищи -->
            <TabControl Grid.Row="3" Margin="0,0,0,10">
                <TabItem Header="Завтрак">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" 
                                  ItemsSource="{Binding MealEntries[Завтрак]}"
                                  SelectedItem="{Binding SelectedEntry}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MinHeight="150"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="*"
                                                    MinWidth="120"/>
                                <DataGridTextColumn Header="Кол-во" 
                                                    Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                                    Width="80"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Ккал" 
                                                    Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="Б" 
                                                    Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="Ж" 
                                                    Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="У" 
                                                    Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="1" 
                                Content="Удалить выбранную запись" 
                                Command="{Binding RemoveEntryCommand}"
                                Margin="5" 
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                Background="#F44336"
                                Foreground="White"
                                MinWidth="140"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Обед">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" 
                                  ItemsSource="{Binding MealEntries[Обед]}"
                                  SelectedItem="{Binding SelectedEntry}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MinHeight="150"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="*"
                                                    MinWidth="120"/>
                                <DataGridTextColumn Header="Кол-во" 
                                                    Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                                    Width="80"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Ккал" 
                                                    Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="Б" 
                                                    Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="Ж" 
                                                    Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="У" 
                                                    Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="1" 
                                Content="Удалить выбранную запись" 
                                Command="{Binding RemoveEntryCommand}"
                                Margin="5" 
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                Background="#F44336"
                                Foreground="White"
                                MinWidth="140"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Ужин">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0" 
                                  ItemsSource="{Binding MealEntries[Ужин]}"
                                  SelectedItem="{Binding SelectedEntry}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  MinHeight="150"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="*"
                                                    MinWidth="120"/>
                                <DataGridTextColumn Header="Кол-во" 
                                                    Binding="{Binding Quantity, StringFormat={}{0} г}" 
                                                    Width="80"
                                                    MinWidth="60"/>
                                <DataGridTextColumn Header="Ккал" 
                                                    Binding="{Binding Calories, StringFormat={}{0:F0}}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="Б" 
                                                    Binding="{Binding Protein, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="Ж" 
                                                    Binding="{Binding Fat, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                                <DataGridTextColumn Header="У" 
                                                    Binding="{Binding Carbohydrates, StringFormat={}{0:F1} г}" 
                                                    Width="60"
                                                    MinWidth="50"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="1" 
                                Content="Удалить выбранную запись" 
                                Command="{Binding RemoveEntryCommand}"
                                Margin="5" 
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                Background="#F44336"
                                Foreground="White"
                                MinWidth="140"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Панель добавления продуктов -->
            <Border Grid.Row="4" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12" 
                    Margin="0,10,0,0"
                    Background="#F9F9F9">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Row="0" 
                               Text="Добавить продукт:" 
                               FontWeight="Bold" 
                               FontSize="13"
                               Margin="0,0,0,10"/>

                    <!-- Поля ввода - адаптивная верстка -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Прием пищи -->
                        <TextBlock Grid.Column="0" 
                                   Text="Прием:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,3,0"
                                   FontSize="12"/>

                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding MealTypes}" 
                                  SelectedItem="{Binding SelectedMealType}"
                                  MinWidth="90"/>

                        <!-- Продукт -->
                        <TextBlock Grid.Column="3" 
                                   Text="Продукт:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,3,0"
                                   FontSize="12"/>

                        <ComboBox Grid.Column="4" 
                                  ItemsSource="{Binding AvailableProducts}" 
                                  SelectedItem="{Binding SelectedProduct}"
                                  DisplayMemberPath="ProductName" 
                                  MinWidth="120"/>

                        <!-- Количество -->
                        <TextBlock Grid.Column="6" 
                                   Text="Кол-во:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,3,0"
                                   FontSize="12"/>

                        <TextBox Grid.Column="7" 
                                 Text="{Binding ProductQuantityInput, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 MaxLength="6">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Validation.HasError" Value="true">
                                            <Setter Property="ToolTip" 
                                                    Value="{Binding RelativeSource={RelativeSource Self}, 
                                                    Path=(Validation.Errors)[0].ErrorContent}"/>
                                            <Setter Property="Background" Value="#FFE0E0"/>
                                            <Setter Property="BorderBrush" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                            <Validation.ErrorTemplate>
                                <ControlTemplate>
                                    <DockPanel>
                                        <AdornedElementPlaceholder/>
                                        <TextBlock Text="!" 
                                                   Foreground="Red" 
                                                   FontWeight="Bold"
                                                   Margin="2,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </DockPanel>
                                </ControlTemplate>
                            </Validation.ErrorTemplate>
                        </TextBox>

                        <TextBlock Grid.Column="8" 
                                   Text="г" 
                                   VerticalAlignment="Center" 
                                   Margin="2,0,0,0"
                                   FontSize="12"/>

                        <!-- Кнопка добавления -->
                        <Button Grid.Column="9" 
                                Content="Добавить" 
                                Command="{Binding AddProductToMealCommand}" 
                                Padding="10,5" 
                                Background="#4CAF50" 
                                Foreground="White"
                                FontWeight="Bold"
                                MinWidth="80"/>
                    </Grid>

                    <!-- Кнопки управления -->
                    <WrapPanel Grid.Row="2" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0">
                        <Button Content="Очистить прием" 
                                Command="{Binding ClearMealCommand}" 
                                Padding="8,4" 
                                Margin="0,0,8,0"
                                Background="#FF9800" 
                                Foreground="White"
                                MinWidth="110"
                                ToolTip="Очистить текущий прием пищи"/>

                        <Button Content="Очистить день" 
                                Command="{Binding ClearDayCommand}" 
                                Padding="8,4" 
                                Background="#F44336" 
                                Foreground="White"
                                MinWidth="100"
                                ToolTip="Очистить все записи за день"/>
                    </WrapPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>