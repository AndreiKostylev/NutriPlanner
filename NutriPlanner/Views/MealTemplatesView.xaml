<UserControl x:Class="NutriPlanner.Views.MealTemplatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Шаблоны блюд" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Панель поиска -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="200" Margin="0,0,10,0"/>
                <Button Content="Обновить список" 
                        Command="{Binding LoadTemplatesCommand}"
                        Padding="10,5"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Список шаблонов -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Список шаблонов" 
                               FontWeight="Bold" Margin="0,0,0,5"/>

                    <DataGrid Grid.Row="1" 
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding DishTemplates}"
                              SelectedItem="{Binding SelectedTemplate}"
                              CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название блюда" Binding="{Binding DishName}" Width="*"/>
                            <DataGridTextColumn Header="Ккал" Binding="{Binding TotalCalories, StringFormat={}{0:F0}}" Width="60"/>
                            <DataGridTextColumn Header="Б" Binding="{Binding TotalProtein, StringFormat={}{0:F0}}" Width="40"/>
                            <DataGridTextColumn Header="Ж" Binding="{Binding TotalFat, StringFormat={}{0:F0}}" Width="40"/>
                            <DataGridTextColumn Header="У" Binding="{Binding TotalCarbohydrates, StringFormat={}{0:F0}}" Width="40"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                        <Button Content="Создать новый" 
                                Command="{Binding CreateTemplateCommand}"
                                Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Удалить" 
                                Command="{Binding DeleteTemplateCommand}"
                                Padding="10,5" Background="#FF4444" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Правая панель - Редактирование -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Основные данные шаблона -->
                    <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Редактирование шаблона" FontWeight="Bold" Margin="0,0,0,5"/>

                            <TextBlock Text="Название блюда" FontSize="10" Foreground="#666"/>
                            <TextBox Text="{Binding SelectedTemplate.DishName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,2,0,10"/>

                            <!-- Питательная ценность -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Калории" FontSize="9" Foreground="#666"/>
                                    <TextBlock Text="{Binding SelectedTemplate.TotalCalories, StringFormat={}{0:F0} ккал}" 
                                               HorizontalAlignment="Center" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Белки" FontSize="9" Foreground="#666"/>
                                    <TextBlock Text="{Binding SelectedTemplate.TotalProtein, StringFormat={}{0:F0} г}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Жиры" FontSize="9" Foreground="#666"/>
                                    <TextBlock Text="{Binding SelectedTemplate.TotalFat, StringFormat={}{0:F0} г}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Углеводы" FontSize="9" Foreground="#666"/>
                                    <TextBlock Text="{Binding SelectedTemplate.TotalCarbohydrates, StringFormat={}{0:F0} г}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Список ингредиентов -->
                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Ингредиенты" FontWeight="Bold" Margin="0,0,0,5"/>

                            <DataGrid Grid.Row="1" 
                                      AutoGenerateColumns="False"
                                      ItemsSource="{Binding TemplateIngredients}"
                                      CanUserAddRows="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity, StringFormat={}{0} г}" Width="80"/>
                                    <DataGridTextColumn Header="Ккал" Binding="{Binding Calories, StringFormat={}{0:F0}}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Добавление ингредиента -->
                    <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                        <StackPanel>
                            <TextBlock Text="Добавить ингредиент" FontWeight="Bold" Margin="0,0,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0" 
                                          ItemsSource="{Binding AvailableProducts}" 
                                          SelectedItem="{Binding SelectedProduct}"
                                          DisplayMemberPath="ProductName"
                                          Margin="0,0,10,0"/>

                                <TextBlock Grid.Column="1" Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="2" Text="{Binding IngredientQuantity, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalContentAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="г" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>

                            <WrapPanel Margin="0,10,0,0">
                                <Button Content="Добавить ингредиент" 
                                        Command="{Binding AddIngredientCommand}"
                                        Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="Удалить ингредиент" 
                                        Command="{Binding RemoveIngredientCommand}"
                                        Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="Пересчитать" 
                                        Command="{Binding CalculateNutritionCommand}"
                                        Padding="10,5"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка сохранения -->
                    <Button Grid.Row="3" 
                            Content="Сохранить шаблон" 
                            Command="{Binding SaveTemplateCommand}"
                            Padding="15,8" Margin="0,10,0,0"
                            Background="#4CAF50" Foreground="White"
                            HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>