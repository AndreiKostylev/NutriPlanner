<Window x:Class="NutriPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NutriPlanner"
        xmlns:vm="clr-namespace:NutriPlanner.ViewModels"
        xmlns:views="clr-namespace:NutriPlanner.Views"
        mc:Ignorable="d"
        Title="NutriPlanner" 
        Height="650" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"
                                              Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <DataTemplate DataType="{x:Type vm:DailyNutritionViewModel}">
            <views:DailyNutritionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
            <views:ProductsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:NutritionPlanViewModel}">
            <views:NutritionPlanView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DietitianDashboardViewModel}">
            <views:DietitianDashboardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ClientManagementViewModel}">
            <views:ClientManagementView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MealTemplatesViewModel}">
            <views:MealTemplatesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UserPlanViewViewModel}">
            <views:UserPlanViewView />
        </DataTemplate>

    </Window.Resources>

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2D3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="NUTRIPLANNER" 
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="18"
                           VerticalAlignment="Center"/>

                <TextBlock Text="{Binding UserDisplayName}"
                           Foreground="#FFCC00"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>

                <Button Content="Выход" 
                        Command="{Binding LogoutCommand}"
                        Margin="20,0,0,0"
                        Padding="10,5"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="#FF3333"/>
            </StackPanel>
        </Border>


        <Border Grid.Row="1" Grid.Column="0" Background="#F5F5F5">
            <ScrollViewer>
                <StackPanel Margin="10" VerticalAlignment="Top">


                    <TextBlock Text="Основное" 
                               Foreground="#666666"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <Button Content="📝 Дневник питания"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowDailyNutritionCommand}" 
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Ведение дневника питания"/>

                    <Button Content="📋 Мои планы питания"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowUserPlanViewCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Просмотр моих планов питания"/>

                    <Button Content="🥦 Продукты"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowProductsCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Управление базой продуктов"/>

                    <Button Content="👤 Профиль"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowProfileCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Информация о профиле пользователя"/>

                    <Button Content="ℹ️ О программе"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowAboutCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Информация о программе и курсовой работе"/>


                    <TextBlock Text="Для диетологов" 
                               Foreground="#666666"
                               FontWeight="Bold"
                               Margin="0,20,0,5"
                               Visibility="{Binding IsDietitianOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <Button Content="📊 Панель диетолога"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowDietitianDashboardCommand}"
                            Visibility="{Binding IsDietitianOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Панель управления для диетологов"/>

                    <Button Content="👥 Управление клиентами"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowClientManagementCommand}"
                            Visibility="{Binding IsDietitianOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Управление клиентами и их планами"/>

                    <Button Content="🍽️ Шаблоны блюд"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowMealTemplatesCommand}"
                            Visibility="{Binding IsDietitianOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Создание шаблонов блюд для клиентов"/>

                    <Button Content="📅 Создание планов"
                            Margin="0,2"
                            Padding="10,8"
                            Command="{Binding ShowNutritionPlanCommand}"
                            Visibility="{Binding IsDietitianOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource MenuButtonStyle}"
                            ToolTip="Создание планов питания для клиентов"/>

                </StackPanel>
            </ScrollViewer>
        </Border>


        <Border Grid.Row="1" Grid.Column="1"
                Background="White" Padding="15">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>


        <Border Grid.Row="2" Grid.ColumnSpan="2"
                Background="#ECECEC" Padding="8">
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center"
                       FontStyle="Italic"/>
        </Border>

    </Grid>
</Window>